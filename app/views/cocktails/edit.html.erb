<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto p-3">
      <div class="card p-5" >
        <h1>Edit Cocktail</h1>
          <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
           <%= f.input :description %>
           <%= f.submit :submit%>
          <% end %>

          <%= link_to 'Back', @cocktail, class: "btn btn-flat" %>
      </div>
    </div>
  </div>
</div>
