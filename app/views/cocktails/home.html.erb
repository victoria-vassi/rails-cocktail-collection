<div class="container-home">
  <div class="banner" style="background-image: url(assets/background.jpg);">
  <div class="top-left">
    <%= image_tag "club2.png", class: "image" %>
  </div>

  <!-- if user signed in start -->
    <% if user_signed_in? %>
      <div class='top-right'>
        <%= link_to "Home", "/cocktails", class: "nav-link", style: "float: left;" %>
        <li class="nav-item dropdown" style="float: right;">
          <%= image_tag "https://res.cloudinary.com/ddjh71lig/image/upload/v1590160822/Avant%20Garde/image_v68xse.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" >
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </div>
    <!-- if user signed in end -->

    <!-- if user is not signed in start (show signin/signup links) -->
      <% else %>
        <% unless controller_name == "registrations" || controller_name == "sessions" %>
          <div class='top-right'>
            <%=link_to 'Log in', new_user_session_path, class: 'user-link mr-2' %>
            <%=link_to 'Sign up', new_user_registration_path, class: 'user-link ml-2' %>
          </div>
        <% end %>
      <% end %>
    <!-- if user is not signed in end -->

   <div class="centered">
     <h1> Welcome to Mixologist </h1>
      <p>Your cocktail collection</p>
      <a class="btn button-home btn-1" href="/cocktails">
      <svg>
        <rect x="0" y="0" fill="none" width="100%" height="100%"></rect>
      </svg>
      Start Now
      </a>
   </div>
 </div>
</div>
