<div class="container-home">
  <div class="banner" style="background-image: url(assets/background.jpg);">
  <div class="top-left">
    <%= image_tag "club2.png", class: "image" %>
  </div>

        <!-- if user signed in start -->
          <% if user_signed_in? %>
            <div class="nav-item dropdown">
              <% unless current_user.avatar.blank? %>
                <%= cl_image_tag current_user.avatar, class: "avatar-new dropdown-toggle", style: 'object-fit: cover; width: 40px; height: 40px;', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <i class="fas fa-user-circle avatar" id="navbarDropdown" data-target="#dropdown-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 40px;"></i>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" id="dropdown-menu">
                <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
        <!-- if user signed in end -->

        <!-- if user is not signed in start (show signin/signup links) -->
          <% else %>
            <% unless controller_name == "registrations" || controller_name == "sessions" %>
              <div class='top-right'>
                <%=link_to 'Log in', new_user_session_path, class: 'user-link mr-2' %>
                <%=link_to 'Sign up', new_user_registration_path, class: 'user-link ml-2' %>
              </div>
            <% end %>
          <% end %>
        <!-- if user is not signed in end -->

  <div class="top-right">
    <a class="user-link mr-2" href="/users/sign_in">Log in</a>
    <a class="user-link ml-2" href="/users/sign_up">Sign up</a>
  </div>

   <div class="centered">
     <h1> Welcome to Mixologist </h1>
      <p>Your cocktail collection</p>
      <a class="btn btn-1" href="#">
      <svg>
        <rect x="0" y="0" fill="none" width="100%" height="100%"></rect>
      </svg>
      Start Now
      </a>
   </div>
 </div>
</div>
