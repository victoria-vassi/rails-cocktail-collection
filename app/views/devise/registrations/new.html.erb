<%= render 'shared/navbar' %>

<div class="devise-container">
  <div class="devise-form-container mx-auto my-auto">
    <%= cl_image_tag('https://images.unsplash.com/photo-1559849327-e27ed9234e35?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80', width: '40%', height: 'auto', style: 'object-fit: cover;') %>
    <div class="col-md-6 my-5 mx-auto">
      <h1>Sign up</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: false,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "create-button mb-2 mt-2" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
        <%= link_to "Cancel", :back %>
      </div>
    </div>
  </div>
</div>
