<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12" >
        <h1 class="text-center"> Edit Ingredients </h1>
      </div>
    </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-lg-6 col-lg-offset-3">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
              <%= f.association :ingredient %>
               <%= f.input :description %>
               <%= f.submit :submit %>
              <% end %>
          <%= link_to "Back to list" , cocktail_path(@cocktail) %>
        </div>
      </div>
  </div>
</div>
